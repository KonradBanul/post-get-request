<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <Button
            android:text="Wyloguj"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:id="@+id/button1"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/idTVResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/idImageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>

    <ImageView
            android:id="@+id/idImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="130dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>